{
  "compilerOptions": {
    "module": "commonJS",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["esnext", "dom"],
    "strict": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist/types",
    "resolveJsonModule": true
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
