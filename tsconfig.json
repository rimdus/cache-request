{
  "compilerOptions": {
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": false,
    "outDir": "./dist/lib",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/typings",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "stripInternal": true
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
